# Cecelia Node Brain - 配置模板
# 核心决策引擎 (5221)

# =====================================================
# Database (PostgreSQL)
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cecelia
DB_USER=cecelia
DB_PASSWORD=your_db_password_here

# =====================================================
# Brain Configuration
# =====================================================
BRAIN_PORT=5221

# Tick Loop (24/7 autonomous operation)
CECELIA_TICK_ENABLED=true
CECELIA_TICK_INTERVAL_MS=5000
# CECELIA_MAX_CONCURRENT: auto-calculated from resource capacity if not set
DISPATCH_TIMEOUT_MINUTES=60

# Notifications (optional)
FEISHU_BOT_WEBHOOK=

# =====================================================
# Cecelia Run (Task Executor)
# =====================================================
CLAUDE_HOME=/home/xx/.claude
SKILLS_PATH=/home/xx/.claude/skills
CLAUDE_MODEL=claude-sonnet-4-5

# =====================================================
# Region Identity (selfcheck requires this)
# =====================================================
ENV_REGION=us
